---
// Header component
import logoSuarez from '../assets/img/logosuarez-removebg-preview.png';
---

<header class="header">
	<!-- Top Bar con teléfono y redes sociales -->
	<div class="top-bar">
		<div class="container">
			<div class="top-bar-content">
				<!-- Teléfono -->
				<a href="tel:+56995221924" class="phone-link">
