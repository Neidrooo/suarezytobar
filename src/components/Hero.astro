---
// Hero section
import videoSrc from '../assets/video/Video-Optimized.mp4';
import heroPoster from '../assets/video/hero-poster.jpg';
---

<section id="inicio" class="hero">
	<div class="hero-background">
		<video
			autoplay
			muted
			loop
			playsinline
			preload="metadata"
			poster={heroPoster.src}
			class="hero-video"
			aria-label="Video de fondo mostrando trabajo profesional de jardinería"
		>
			<source src={videoSrc} type="video/mp4" />
			Tu navegador no soporta el elemento de video.
		</video>
		<div class="hero-overlay"></div>
	</div>

	<div class="container">
		<div class="hero-content">
			<h1>
				<span class="title-text">Mantenimiento de Jardines</span>
				<span class="title-rotating" id="rotating-word" aria-live="polite"></span>
				<noscript><span class="title-rotating">Profesional</span></noscript>
				<span class="title-text">en Santiago</span>
			</h1>

			<p class="hero-description">
				Más de 20 años transformando espacios verdes. Servicios de paisajismo, aseo industrial e hidrolavado para empresas y condominios en la Región Metropolitana.
			</p>

			<div class="hero-buttons">
				<a href="#contacto" class="btn btn-primary">Cotizar Ahora</a>
			</div>
		</div>
	</div>
</section>

<style>
	.hero {
		position: relative;
		min-height: 85vh;
		display: flex;
		align-items: center;
		padding: 120px 0 0;
	}

	/* Degradado en la parte inferior para suavizar transición */
	.hero::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 350px;
		background: linear-gradient(to bottom,
			transparent 0%,
			rgba(15, 23, 42, 0.2) 25%,
			rgba(15, 23, 42, 0.5) 50%,
			rgba(15, 23, 42, 0.85) 80%,
			rgba(15, 23, 42, 0.98) 100%
		);
		z-index: 1;
		pointer-events: none;
	}

	@media (min-width: 768px) {
		.hero {
			min-height: 90vh;
			padding: 140px 0 0;
		}

		.hero::after {
			height: 400px;
		}
	}

	.hero-background {
		position: absolute;
		inset: 0;
		z-index: 0;
	}

	.hero-video {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center center;
		scale: 1;
	}

	.hero-overlay {
		position: absolute;
		inset: 0;
		background: linear-gradient(135deg, rgba(17, 24, 39, 0.75) 0%, rgba(17, 24, 39, 0.6) 50%, rgba(34, 197, 94, 0.3) 100%);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
		width: 100%;
		position: relative;
		z-index: 10;
	}

	.hero-content {
		max-width: 42rem;
		text-align: center;
		margin: 0 auto;
	}

	.hero-description {
		font-size: 1rem;
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.6;
		margin-bottom: 1.5rem;
		text-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	@media (min-width: 768px) {
		.hero-description {
			font-size: 1.125rem;
			margin-bottom: 2rem;
		}
	}

	h1 {
		font-size: 2rem;
		font-weight: 800;
		margin-bottom: 1.5rem;
		line-height: 1.4;
		letter-spacing: -0.02em;
		display: flex;
		flex-wrap: wrap;
		gap: 0.4rem;
		justify-content: center;
	}

	.title-text {
		color: #ffffff;
		text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5), 0 2px 8px rgba(0, 0, 0, 0.3);
	}

	.title-rotating {
		color: #8bc53f;
		text-shadow: 0 4px 20px rgba(139, 197, 63, 0.6), 0 2px 10px rgba(139, 197, 63, 0.4);
		min-width: 200px;
		display: inline-block;
		animation: fadeIn 0.5s ease-in;
		text-align: center;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(-10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.hero-buttons {
		display: flex;
		flex-direction: row;
		gap: 1rem;
		justify-content: center;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.875rem 2rem;
		font-size: 0.9375rem;
		font-weight: 600;
		text-decoration: none;
		border-radius: 50px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		letter-spacing: 0.01em;
	}

	.btn-primary {
		background: linear-gradient(135deg, #f37121 0%, #e85d0d 100%);
		color: white;
		border: none;
		box-shadow: 0 8px 24px rgba(243, 113, 33, 0.3), 0 4px 8px rgba(243, 113, 33, 0.2);
	}

	.btn-primary:hover {
		transform: translateY(-3px);
		box-shadow: 0 12px 32px rgba(243, 113, 33, 0.4), 0 6px 12px rgba(243, 113, 33, 0.3);
	}

	.btn-primary:active {
		transform: translateY(-1px);
	}

	@media (min-width: 640px) {
		.hero-buttons {
			flex-direction: row;
			gap: 1rem;
		}

		.stats {
			gap: 1.5rem;
		}
	}

	@media (min-width: 640px) {
		h1 {
			font-size: 2.5rem;
			margin-bottom: 2rem;
			gap: 0.5rem;
		}

		.title-rotating {
			min-width: 280px;
		}
	}

	@media (min-width: 768px) {
		h1 {
			font-size: 3.5rem;
			margin-bottom: 2.5rem;
			gap: 0.6rem;
		}

		.title-rotating {
			min-width: 380px;
		}

		.btn {
			padding: 0.875rem 2.5rem;
			font-size: 1rem;
		}
	}

	@media (min-width: 1024px) {
		h1 {
			font-size: 4rem;
			gap: 0.75rem;
		}

		.title-rotating {
			min-width: 480px;
		}
	}
</style>

<script>
	const words = ['Listos para Impresionar', 'Sin Preocupaciones', 'Siempre Impecables', 'Que Valorizan', 'Libres de Mantenimiento'];
	let currentIndex = 0;
	const rotatingWord = document.getElementById('rotating-word');

	function changeWord() {
		if (rotatingWord) {
			rotatingWord.style.opacity = '0';
			rotatingWord.style.transform = 'translateY(-10px)';

			setTimeout(() => {
				currentIndex = (currentIndex + 1) % words.length;
				rotatingWord.textContent = words[currentIndex];
				rotatingWord.style.opacity = '1';
				rotatingWord.style.transform = 'translateY(0)';
			}, 300);
		}
	}

	// Inicializar con la primera palabra
	if (rotatingWord) {
		rotatingWord.textContent = words[0];
		rotatingWord.style.transition = 'all 0.3s ease';
	}

	// Cambiar palabra cada 2 segundos (más tiempo para leer frases más largas)
	setInterval(changeWord, 2000);
</script>
