---
// Services section
const services = [
	{
		title: "Mantenimiento de Jardines",
		description: "Poda profesional, limpieza integral, fertilización y control de malezas.",
		image: "https://images.unsplash.com/photo-1558904541-efa843a96f01?w=600&q=80"
	},
	{
		title: "Sistemas de Riego",
		description: "Instalación, mantenimiento y reparación de sistemas de riego eficientes.",
		image: "https://images.unsplash.com/photo-1625246333195-78d9c38ad449?w=600&q=80"
	},
	{
		title: "Paisajismo Profesional",
		description: "Diseño y mantención de áreas verdes, bosques y canchas deportivas.",
		image: "https://images.unsplash.com/photo-1585320806297-9794b3e4eeae?w=600&q=80"
	},
	{
		title: "Aseo Industrial",
		description: "Limpieza profesional de áreas industriales y zonas de circulación.",
		image: "https://images.unsplash.com/photo-1581578731548-c64695cc6952?w=600&q=80"
	},
	{
		title: "Hidrolavado Especializado",
		description: "Servicios de hidrolavado para estacionamientos y áreas logísticas.",
		image: "https://images.unsplash.com/photo-1628177142898-93e36e4e3a50?w=600&q=80"
	},
	{
		title: "Limpieza de Instalaciones",
		description: "Mantenimiento de áreas comunes e instalaciones especializadas.",
		image: "https://images.unsplash.com/photo-1581578731548-c64695cc6952?w=600&q=80"
	}
];
---

<section id="servicios" class="services">
	<div class="container">
		<div class="services-header">
			<h2>Servicios Profesionales de Áreas Verdes y Aseo Industrial</h2>
			<p class="services-description">
				Ofrecemos servicios especializados de mantenimiento de jardines, paisajismo y limpieza industrial con más de 20 años de experiencia en Santiago, Chile.
			</p>
		</div>

		<div class="services-grid">
			{services.map((service) => (
				<div class="service-card">
					<div class="service-image">
						<img src={service.image} alt={service.title} />
						<div class="service-overlay"></div>
					</div>
					<div class="service-content">
						<h3>{service.title}</h3>
						<p>{service.description}</p>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.services {
		padding: 0.5rem 0 1.5rem 0;
		background: linear-gradient(180deg, #ffffff 0%, #f9fafb 100%);
		position: relative;
		overflow: hidden;
	}

	.services::before {
		content: '';
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 100%;
		max-width: 1400px;
		height: 100%;
		background: radial-gradient(circle at 50% 100%, rgba(139, 197, 63, 0.03) 0%, transparent 60%);
		pointer-events: none;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
		width: 100%;
		position: relative;
		z-index: 1;
	}

	.services-header {
		text-align: center;
		max-width: 48rem;
		margin: 0 auto 1.25rem;
	}

	.badge {
		display: inline-block;
		padding: 0.5rem 1.25rem;
		border-radius: 50px;
		background: linear-gradient(135deg, rgba(139, 197, 63, 0.15), rgba(139, 197, 63, 0.08));
		border: 1.5px solid rgba(139, 197, 63, 0.3);
		margin-bottom: 1rem;
		backdrop-filter: blur(10px);
	}

	.badge span {
		font-size: 0.875rem;
		font-weight: 600;
		color: #7ab82e;
		text-transform: uppercase;
		letter-spacing: 0.08em;
	}

	h2 {
		font-size: 1.5rem;
		font-weight: 800;
		color: #111827;
		margin-bottom: 1rem;
		line-height: 1.2;
	}

	.services-description {
		font-size: 0.9375rem;
		color: #6b7280;
		line-height: 1.5;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 0.875rem;
	}

	.service-card {
		background: white;
		border-radius: 1.25rem;
		overflow: hidden;
		box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06), 0 3px 6px rgba(0, 0, 0, 0.04);
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		cursor: pointer;
		height: 100%;
		display: flex;
		flex-direction: column;
		border: 1px solid rgba(139, 197, 63, 0.1);
	}

	.service-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1), 0 8px 16px rgba(139, 197, 63, 0.08);
		border-color: rgba(139, 197, 63, 0.3);
	}

	.service-image {
		position: relative;
		height: 140px;
		overflow: hidden;
	}

	.service-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
		filter: brightness(0.95);
	}

	.service-card:hover .service-image img {
		transform: scale(1.08);
		filter: brightness(1);
	}

	.service-overlay {
		position: absolute;
		inset: 0;
		background: linear-gradient(to top, rgba(17, 24, 39, 0.7) 0%, rgba(17, 24, 39, 0.2) 50%, transparent 100%);
		transition: opacity 0.4s ease;
	}

	.service-card:hover .service-overlay {
		opacity: 0.8;
	}

	.service-content {
		padding: 1rem;
		flex: 1;
		display: flex;
		flex-direction: column;
		background: linear-gradient(180deg, #ffffff 0%, #fcfcfc 100%);
	}

	h3 {
		font-size: 0.9375rem;
		font-weight: 700;
		color: #111827;
		margin: 0 0 0.5rem 0;
		line-height: 1.3;
		transition: color 0.3s ease;
	}

	.service-card:hover h3 {
		color: #7ab82e;
	}

	.service-card p {
		color: #6b7280;
		line-height: 1.5;
		margin: 0;
		font-size: 0.8125rem;
		flex: 1;
	}

	@media (min-width: 640px) {
		.services-grid {
			gap: 1.25rem;
		}

		.service-image {
			height: 160px;
		}

		.service-content {
			padding: 1.5rem;
		}

		h3 {
			font-size: 1.0625rem;
		}

		.service-card p {
			font-size: 0.875rem;
		}
	}

	@media (min-width: 768px) {
		.services {
			padding: 4rem 0 6rem 0;
		}

		.services-header {
			margin: 0 auto 4rem;
		}

		.services-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 1.75rem;
		}

		.service-image {
			height: 240px;
		}

		.service-content {
			padding: 2rem;
		}

		h2 {
			font-size: 2.5rem;
			margin-bottom: 1.5rem;
		}

		.services-description {
			font-size: 1.125rem;
		}

		h3 {
			font-size: 1.375rem;
		}

		.service-card p {
			font-size: 1rem;
		}
	}

	@media (min-width: 1024px) {
		.services-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}
</style>
