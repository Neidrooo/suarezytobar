---
// Services section
const services = [
	{
		title: "Mantenimiento de Jardines",
		description: "Poda profesional, limpieza integral, fertilización y control de malezas.",
		image: "https://images.unsplash.com/photo-1558904541-efa843a96f01?w=600&q=80"
	},
	{
		title: "Sistemas de Riego",
		description: "Instalación, mantenimiento y reparación de sistemas de riego eficientes.",
		image: "https://images.unsplash.com/photo-1625246333195-78d9c38ad449?w=600&q=80"
	},
	{
		title: "Paisajismo Profesional",
		description: "Diseño y mantención de áreas verdes, bosques y canchas deportivas.",
		image: "https://images.unsplash.com/photo-1585320806297-9794b3e4eeae?w=600&q=80"
	},
	{
		title: "Aseo Industrial",
		description: "Limpieza profesional de áreas industriales y zonas de circulación.",
		image: "https://images.unsplash.com/photo-1581578731548-c64695cc6952?w=600&q=80"
	},
	{
		title: "Hidrolavado Especializado",
		description: "Servicios de hidrolavado para estacionamientos y áreas logísticas.",
		image: "https://images.unsplash.com/photo-1628177142898-93e36e4e3a50?w=600&q=80"
	},
	{
		title: "Limpieza de Instalaciones",
		description: "Mantenimiento de áreas comunes e instalaciones especializadas.",
		image: "https://images.unsplash.com/photo-1581578731548-c64695cc6952?w=600&q=80"
	}
];
---

<section id="servicios" class="services">
	<div class="container">
		<div class="services-header">
			<div class="badge">
				<span>Nuestros Servicios</span>
			</div>
			<h2>Servicios Profesionales de Áreas Verdes y Aseo Industrial</h2>
			<p class="services-description">
				Ofrecemos servicios especializados de mantenimiento de jardines, paisajismo y limpieza industrial con más de 20 años de experiencia en Santiago, Chile.
			</p>
		</div>

		<div class="services-grid">
			{services.map((service) => (
				<div class="service-card">
					<div class="service-image">
						<img src={service.image} alt={service.title} />
						<div class="service-overlay"></div>
					</div>
					<div class="service-content">
						<h3>{service.title}</h3>
						<p>{service.description}</p>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.services {
		padding: 3rem 0;
		background: white;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
		width: 100%;
	}

	.services-header {
		text-align: center;
		max-width: 48rem;
		margin: 0 auto 2rem;
	}

	.badge {
		display: inline-block;
		padding: 0.25rem 1rem;
		border-radius: 9999px;
		background: rgba(34, 197, 94, 0.2);
		border: 1px solid rgba(34, 197, 94, 0.3);
		margin-bottom: 1rem;
	}

	.badge span {
		font-size: 0.875rem;
		font-weight: 500;
		color: #22c55e;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	h2 {
		font-size: 1.75rem;
		font-weight: 700;
		color: #111827;
		margin-bottom: 1rem;
		line-height: 1.2;
	}

	.services-description {
		font-size: 1rem;
		color: #6b7280;
		line-height: 1.6;
	}

	.services-grid {
		display: grid;
		gap: 1rem;
	}

	.service-card {
		background: white;
		border-radius: 1rem;
		overflow: hidden;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
		transition: all 0.3s ease;
		cursor: pointer;
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	.service-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
	}

	.service-image {
		position: relative;
		height: 200px;
		overflow: hidden;
	}

	.service-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s ease;
	}

	.service-card:hover .service-image img {
		transform: scale(1.1);
	}

	.service-overlay {
		position: absolute;
		inset: 0;
		background: linear-gradient(to top, rgba(17, 24, 39, 0.8) 0%, transparent 100%);
	}

	.service-content {
		padding: 1.5rem;
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	h3 {
		font-size: 1.25rem;
		font-weight: 700;
		color: #111827;
		margin: 0 0 0.75rem 0;
		line-height: 1.3;
	}

	.service-card p {
		color: #6b7280;
		line-height: 1.6;
		margin: 0;
		font-size: 0.9375rem;
		flex: 1;
	}

	@media (min-width: 768px) {
		.services {
			padding: 6rem 0;
		}

		.services-header {
			margin: 0 auto 4rem;
		}

		.services-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 2rem;
		}

		.service-image {
			height: 240px;
		}

		.service-content {
			padding: 2rem;
		}

		h2 {
			font-size: 3rem;
			margin-bottom: 1.5rem;
		}

		.services-description {
			font-size: 1.125rem;
		}

		h3 {
			font-size: 1.5rem;
		}

		.service-card p {
			font-size: 1rem;
		}
	}

	@media (min-width: 1024px) {
		.services-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}
</style>
