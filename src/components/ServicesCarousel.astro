<script>
  // Swipe functionality for touch devices - Lightweight implementation
  document.addEventListener('DOMContentLoaded', () => {
    const slider = document.querySelector('.slider');
    const totalSlides = 5;
    let startX = 0;
    let currentSlide = 3; // Starts at index 3 (checked by default)
    
    if (!slider) return;
    
    const getCheckedIndex = (): number => {
      const checked = slider.querySelector('input[name="testimonial"]:checked') as HTMLInputElement;
      return checked ? parseInt(checked.id.split('-')[1]) : currentSlide;
    };
    
    const setSlide = (index: number): void => {
      const radio = slider.querySelector(`#t-${index}`) as HTMLInputElement;
      if (radio) radio.checked = true;
    };
    
    slider.addEventListener('touchstart', (e: Event) => {
      const touchEvent = e as TouchEvent;
      startX = touchEvent.touches[0].clientX;
      currentSlide = getCheckedIndex();
    }, { passive: true });
    
    slider.addEventListener('touchend', (e: Event) => {
      const touchEvent = e as TouchEvent;
      const endX = touchEvent.changedTouches[0].clientX;
      const diff = startX - endX;
      const threshold = 50; // Minimum swipe distance in pixels
      
      if (Math.abs(diff) > threshold) {
        if (diff > 0 && currentSlide < totalSlides) {
          // Swipe left - next slide
          setSlide(currentSlide + 1);
        } else if (diff < 0 && currentSlide > 1) {
          // Swipe right - previous slide
          setSlide(currentSlide - 1);
        }
      }
    }, { passive: true });
  });
</script>
