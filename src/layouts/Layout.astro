			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": "-33.4489",
				"longitude": "-70.6693"
			},
			"areaServed": {
				"@type": "GeoCircle",
				"geoMidpoint": {
					"@type": "GeoCoordinates",
					"latitude": "-33.4489",
					"longitude": "-70.6693"
				},
