						}
					},
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
							"name": "Hidrolavado Especializado",
							"description": "Servicios de hidrolavado para estacionamientos y áreas logísticas"
						}
					}
				]
			}
		})} />

		<!-- Organization Schema -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Organization",
